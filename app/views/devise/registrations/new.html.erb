<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="large-6 large-offset-3 columns">
      <div class="signup-panel">
        <p class="welcome"> Welcome to this awesome app!</p>
          <div class="row collapse">
            <div class="small-2 columns">
              <span class="prefix"><i class="fa fa-envelope"></i></span>
            </div>
            <div class="small-10  columns">
              <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
            </div>
          </div>
          <div class="row collapse">
            <div class="small-2 columns ">
              <span class="prefix"><i class="fa fa-key"></i></span>
            </div>
            <div class="small-10 columns ">
              <%= f.password_field :password, autocomplete: "off", placeholder: "#{@minimum_password_length} characters minimum)" %>
            </div>
          </div>
          <div class="row collapse">
            <div class="small-2 columns ">
              <span class="prefix"><i class="fa fa-key"></i></span>
            </div>
            <div class="small-10 columns ">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
            </div>
          </div>
        <%= f.submit "Sign up", class: "button" %>
         <p>Already have an account? <%= render "devise/shared/links" %></p>
      </div>
    </div>
   </div>
<% end %>