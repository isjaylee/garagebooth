<% if item.images.present? %>
  <%= link_to image_tag(item.images.first.image.thumb("100x100#").url, { align: "left", style: "margin-right: 2em;" }), booth_item_path(item.booth.uid, item) %>
<% else %>
  <%= link_to image_tag("http://placehold.it/100x100", { align: "left", style: "margin-right: 2em;" }), booth_item_path(item.booth.uid, item) %>
<% end %>