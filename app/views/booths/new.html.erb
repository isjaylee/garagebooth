<div class="row">
  <div class="large-12 columns">
    <h1>Create a Booth</h1>
  </div>
</div>

<%= form_for @booth do |f| %>
  <div class="row">
    <div class="large-12 columns">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <%= f.label :address1 %>
      <%= f.text_field :address1 %>
    </div>
    <div class="large-4 columns end">
      <%= f.label :address2 %>
      <%= f.text_field :address2 %>
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div class="large-2 columns">
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>
    <div class="large-2 columns end">
      <%= f.label :zipcode %>
      <%= f.text_field :zipcode %>
    </div>
  </div>

  <div class="row">
    <div class="large-6 columns">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="large-6 columns end">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <%= f.label :start_date %>
      <%= f.text_field :start_date, id: "start-date" %>
    </div>
    <div class="large-4 columns end">
      <%= f.label :stop_date %>
      <%= f.text_field :stop_date, id: "stop-date" %>
    </div>
  </div>

  <div class="row">
    <div class="large-1 columns">
      <%= f.submit "Create Booth", class: "button primary" %>
    </div>
  </div>
<% end %>