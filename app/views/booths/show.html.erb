<div class="row">
  <div class="large-12 columns">

    <div class="row">
      <div class="large-12 columns">
        <div class="row booth-top">

          <div class="large-4 small-12 columns">
            <%= image_tag(@booth.images.first.image.thumb("540x400").url) %>
            <div class="hide-for-small panel">
              <p><%= link_to "Edit", edit_booth_path(@booth) %></p>
              <h3><%= @booth.name %></h3>
              <h5 class="subheader"><%= @booth.description %></h5>
            </div>
              <a href="#"><div class="panel callout radius"><h6><%= @items.count %> items in your cart</h6></div></a>
          </div>
          
          <div class="large-8 columns">
            <%= link_to "+ Add Item", new_booth_item_path(@booth), class: "small button" %>
            <a href="#" class="small secondary radius button split right">Sort <span data-dropdown="item-sort"></span></a>
            <ul id="item-sort" class="f-dropdown open f-open-dropdown" data-dropdown-content="" aria-hidden="false">
              <li><a href="#">By Lowest Price</a></li>
              <li><a href="#">By Highest Price</a></li>
              <li><a href="#">By Category</a></li>
            </ul>
          </div>

          <div class="large-8 columns">
            <div class="row">
              <% @items.each do |item| %>
                <div class="large-4 small-6 columns end">
                  <%= link_to image_tag(item.images.first.image.url), booth_item_path(item.booth, item) %>
                  <div class="panel">
                    <h5><%= link_to item.name, booth_item_path(item.booth, item) %></h5>
                    <h6 class="subheader"><%= number_to_currency(item.price) %></h6>
                  </div>
                </div>
              <% end %>
            </div>
            <ul class="pagination right">
              <li class="arrow unavailable"><a href="">&laquo;</a></li>
              <li class="current"><a href="">1</a></li>
              <li><a href="">2</a></li>
              <li><a href="">3</a></li>
              <li><a href="">4</a></li>
              <li class="unavailable"><a href="">&hellip;</a></li>
              <li><a href="">12</a></li>
              <li><a href="">13</a></li>
              <li class="arrow"><a href="">&raquo;</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>