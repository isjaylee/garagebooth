<div class="row">
  <div class="large-12 columns">
    <h1>Edit <%= @booth.name %> Booth</h1>
  </div>
</div>

<%= form_for @booth do |f| %>
  <div class="row">
    <div class="large-12 columns">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <%= f.label :address1 %>
      <%= f.text_field :address1 %>
    </div>
    <div class="large-4 columns end">
      <%= f.label :address2 %>
      <%= f.text_field :address2 %>
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div class="large-2 columns">
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>
    <div class="large-2 columns end">
      <%= f.label :zipcode %>
      <%= f.text_field :zipcode %>
    </div>
  </div>

  <div class="row">
    <div class="large-6 columns">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="large-6 columns end">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <%= f.label :start_date %>
      <%= f.text_field :start_date, id: "start-date", data: {"date-format" => "yyyy/mm/dd"} %>
    </div>
    <div class="large-4 columns end">
      <%= f.label :stop_date %>
      <%= f.text_field :stop_date, id: "stop-date", data: {"date-format" => "yyyy/mm/dd"} %>
    </div>
  </div>

  <%= f.fields_for @image do |image_field| %>
    <div class="row">
      <div class="large-6 columns">
        <%= image_field.label :image %>
        <%= image_field.file_field :image %>
      </div>
    </div>
  <% end %>

  <% if @image.present? %>
    <div class="row">
      <div class="large-6 columns">
        <%= image_tag(@image.image.thumb("100x100#").url) %>
      </div>
    </div>
  <% end %>

  <br />

  <div class="row">
    <div class="large-1 columns">
      <%= f.submit "Edit Booth", class: "button primary" %>
    </div>
  </div>
<% end %>