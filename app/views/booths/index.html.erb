<div class="panel custom-panel">
  <div id="wrapper">
    <div id="map" class="clearfix">
    </div>
    <div id="over_map" class="right">
      <%= form_tag items_search_path, method: :get do |f| %>
        <div class="row">
          <div class="large-12 columns">
            <%= label_tag "Search" %>
            <%= text_field_tag :search, nil, autofocus: true, placeholder: "appliances, clothes, etc.", size: 30 %>
          </div>
        </div>

        <div class="row">
          <div class="large-12 columns">
            <%= label_tag "Location" %>
            <%= text_field_tag :location, nil, placeholder: "denver, miami, etc." %>
          </div>
        </div>

        <div class="row">
          <div class="large-12 columns">
            <%= label_tag "Category" %>
            <%= select_tag :category, options_for_select(Category.all.map{ |f| [f.name, f.id] }) %>
          </div>
        </div>
        
        <div class="row">
          <div class="large-12 columns">
            <%= submit_tag 'Search', class: "button success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="reasons full-width">
  <div class="row">
    <div class="text-center reason-title">
      <h2>Start selling today!</h2>
    </div>
    <div class="large-4 columns text-center">
      <i class="fa fa-search"></i>
      <p>Find a garage sale near you.</p>
    </div>
    <div class="large-4 columns text-center">
      <i class="fa fa-archive"></i>
      <p>Start your own garage sale.</p>
    </div>
    <div class="large-4 columns text-center">
      <i class="fa fa-money"></i>
      <p>Earn extra cash...or save some!</p>
    </div>
  </div>
</div>
<div class="featured-section full-width">
<div class="row">
  <div class="small-12 large-12 columns">
    <h2 class="text-center featured">Featured Booths</h2>
  </div>
  <div class="small-12 large-12 columns">
    <div class="items">
      <% @booths.each do |booth| %>
        <div class="large-3 small-6 columns">
          <%= render partial: "booths/image_or_default", locals: { booth: booth, thumb: "500x500"} %>
          <div class="panel">
            <p><%= link_to booth.name, booth_path(booth.uid) %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>